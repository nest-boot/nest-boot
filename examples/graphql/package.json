  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "dev:repl": "nest start --watch --entryFile repl",
    "debug": "nest start --debug --watch",
    "debug:repl": "nest start --debug --watch --entryFile repl",
    "start": "node dist/main",
    "start:repl": "node dist/repl",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest --config ./test/jest-e2e.json",
    "orm": "mikro-orm"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@mikro-orm/core": "^6.4.16",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.4.16",
    "@mikro-orm/reflection": "^6.4.16",
    "@nest-boot/database": "workspace:^7.0.0-beta.2",
    "@nest-boot/graphql": "workspace:^7.0.0-beta.2",
    "@nest-boot/graphql-connection": "workspace:^7.0.0-beta.2",
    "@nest-boot/logger": "workspace:^7.0.0-beta.2",
    "@nest-boot/request-context": "workspace:^7.0.0-beta.2",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.1.3",
    "graphql": "^16.11.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@mikro-orm/cli": "^6.4.16",
    "@mikro-orm/migrations": "^6.4.16",
    "@mikro-orm/seeder": "^6.4.16",
    "@nest-boot/eslint-config": "workspace:^7.0.0-beta.1",
    "@nest-boot/eslint-plugin": "workspace:^7.0.0-beta.1",
    "@nest-boot/tsconfig": "workspace:*",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.2",
    "@types/jest": "29.5.14",
    "@types/node": "^22.15.30",
    "@types/supertest": "^6.0.3",
    "jest": "29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "volta": {
    "node": "18.12.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
