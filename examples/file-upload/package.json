    "@nestjs/core": "^10.3.10",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/platform-express": "^10.3.10",
    "bytes": "^3.1.2",
    "graphql": "^16.9.0",
    "minio": "^8.0.1",
