{
  "private": true,
  "name": "@nest-boot/workspace",
  "repository": {
    "type": "git",
    "url": "https://github.com/nest-boot/nest-boot.git"
  },
  "packageManager": "pnpm@8.6.2",
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 8.0.0",
    "pnpm": ">= 8.0.0"
  },
  "scripts": {
    "prepare": "chmod +x ./node_modules/husky/lib/bin.js && husky install",
    "build": "turbo run build",
    "build:website": "cd apps/website && pnpm run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev:packages": "turbo run dev --filter=./packages/* --no-cache --parallel --continue",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint --filter=./packages/*",
    "release": "multi-semantic-release --deps.bump=override --deps.release=inherit --deps.prefix=^ --ignore-private-packages=true",
    "debug:release": "pnpm release --dry-run",
    "debug:publish": "pnpm publish -r --dry-run --no-git-checks"
  },
  "devDependencies": {
    "@nest-boot/eslint-config": "workspace:*",
    "@nest-boot/eslint-plugin": "workspace:*",
    "@nest-boot/tsconfig": "workspace:*",
    "@semrel-extra/npm": "^1.2.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "multi-semantic-release": "^3.0.2",
    "prettier": "^3.0.3",
    "turbo": "^1.10.13"
  },
  "lint-staged": {
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "volta": {
    "node": "18.12.1"
  }
}
